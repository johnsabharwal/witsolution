@using Services;
@{
    ViewBag.Title = "About Page";
    ViewBag.Keywords = "Partner with Wit-Solutions for Cutting-Edge IT Services in India,Software Development Punjab,It Company India";
    ViewBag.Description = "Learn about our software company based in Punjab, India. We specialize in software development, IT services, and innovative technology solutions. Discover our expertise and commitment to excellence in delivering top-notch software solutions.";
    ViewBag.pageHeading = "About us";
    ViewBag.Content = "Strategic Development: The Right Products, Built Right";
    ViewBag.formHeading = "Need help with Development?";
    
  
    ViewBag.paragraph = "Thrive in your industry with our innovative and transformative software development solutions.";

    }



<partial name="_Quote" />


<link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
<link href="~/lib/animate/animate.min.css" rel="stylesheet">


<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-7">
                <div class="section-title position-relative pb-3 mb-5">
                    <h5 class="fw-bold text-primary text-uppercase">About Us</h5>
                    <h1 class="mb-0">Technology Partners for Ongoing Innovation</h1>
                </div>
                <p class="mb-4">
                 As Team we cultivate innovative technology partnerships that drive progress and excellence. By collaborating with industry leaders, we integrate state-of-the-art solutions that propel our clients forward. Our commitment to innovation ensures we deliver exceptional value, transforming challenges into opportunities and fostering sustainable growth in a rapidly evolving digital world.
                </p>
                <div class="row g-0 mb-3">
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.2s">
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>Award Winning</h5>
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>Professional Staff</h5>
                    </div>
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.4s">
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>24/7 Support</h5>
                        <h5 class="mb-3"><i class="fa fa-check text-primary me-3"></i>Fair Prices</h5>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-4 wow fadeIn" data-wow-delay="0.6s">
                    <div class="bg-primary d-flex align-items-center justify-content-center rounded" style="width: 60px; height: 60px;">
                       <a href="tel:@ConstContent.Number"><i class="fa fa-phone-alt text-white"></i></a>
                    </div>
                    <div class="ps-4">
                        <h5 class="mb-2">Call to ask any question</h5>
                        <h4 class="text-primary mb-0">@ConstContent.Number
                        </h4>
                    </div>
                </div>
               
            </div>
            <div class="col-lg-5" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.9s" src="~/img/about.jpg" style="object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
</div>
